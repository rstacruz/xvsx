/*
 * code
 */

.article-code
  &
    background: rgba(white, 0.8)
    border-radius: 4px
    paper-shadow()

  td
    padding: 20px
    padding-right: 50px

  td:first-child
    background: white
    border-right: solid 1px rgba($line, 0.1)

  td.empty
    vertical-align: middle

  span.nil:before
    display: block
    ion-icon('close-round')
    font-size: 24px
    color: $bg - 2%
    text-align: center

  pre
    margin-left: auto
    margin-right: auto
    // overflow-x: auto
