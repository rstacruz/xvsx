/*
 * syntax
 */

.hljs
  $c = #567 - 15%
  &
    color: $c

  .hljs-keyword
    color: $c + 30%

  .hljs-title
    font-weight: bold
    color: $c

  .hljs-comment
    color: mix($c, white, 50%)

  .hljs-symbol,
  .hljs-string,
  .hljs-number,
  .hljs-regexp
    color: $accent2

  .hljs-ellipsis
    &:before
      color: mix($c, white, 50%)
      content: '···'
      background: rgba(#888, 0.1)
      border-radius: 2px
      padding: 0 5px
      font-size: 0.9em

  .hljs-result
    color: mix($c, white, 50%)
    &:before
      ion-icon('arrow-right-c', 12px)
      margin-left: 10px
      margin-right: 10px
      color: $accent

  .hljs-hr
    height: 1px
    line-height: 0
    &:before
      height: 1px
      content: ''
      display: block
      width: 100%
      background: linear-gradient(to right, #eee 50%, rgba(#eee, 0.0))
      margin: 1.2em -20px

