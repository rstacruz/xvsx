/*
 * syntax
 */

.hljs
  $c = #567
  &
    color: $c

  .hljs-keyword
    color: $c + 50%

  .hljs-title
    font-weight: bold
    color: $c

  .hljs-comment
    color: mix($slate, white, 75%)
    italic-type()
    letter-spacing: 1px
    font-size: 0.9em

  .hljs-symbol,
  .hljs-string,
  .hljs-number,
  .hljs-regexp
    color: $accent2

