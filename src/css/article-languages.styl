.article-languages
  h4
    font-weight: normal
    color: $slate
    font-size: 0.8em
    position: relative

    margin: 10px 0
    padding: 0
    text-align: right

  h4:after
    content: ''
    display: block
    position: absolute
    left: 0
    top: 50%
    width: 100%
    height: 2px
    background: rgba($accent, 0.10)
    border-radius: 2px
    opacity: 0

  span
    display: inline
    background: white
    padding: 0 15px
    position: relative
    z-index: 1
    margin-left: 15px
