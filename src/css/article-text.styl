/*
 * text
 */

.article-text
  &
    color: $liteslate
    font-size: 0.9em
    margin-top: 15px

  p
    margin: 0
    padding: 0
    padding-left: 0px

    &:before
      content: ''
      display: inline-block
      width: 15px
      height: 2px
      vertical-align: middle
      background: $slate
      margin-right: 15px
      opacity: 0.25

  code, a
    italic-type()
    color: $darkslate

  a
    text-decoration: none
    box-shadow: inset 0 -3px rgba($accent2, 0.1)
    padding: 1px 0

  a:hover
    color: $xblack


