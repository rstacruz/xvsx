.-layout-compact
  .section .title
    margin-bottom: 40px
    font-size: 2em

  .article
    margin-top: 5px
    margin-bottom: 5px

  .article-head
    width: 20%
    float: left
    padding-right: 20px
    padding-top: 20px
    font-size: 1em
    text-align: right
    line-height: 1.3

  .article-head:before
    display: none

  .article-code,
  .article-text
    width: 80%
    float: right

  .article-code
    font-size: 0.9em

  .article-code.-with-text
    border-bottom-left-radius: 0
    border-bottom-right-radius: 0
    
  .article-text
    background: rgba(white, 0.5)
    paper-shadow()

    border-bottom-left-radius: 3px
    border-bottom-right-radius: 3px
    margin-top: 0
    margin-bottom: 0
    padding: 0
    font-size: 0.8em

  .article-text td
      padding: 10px

  .article-text td:first-child
    background: rgba(white, 0.5)

  .article-text p
    padding-bottom: 0
