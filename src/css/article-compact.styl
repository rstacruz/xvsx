.-layout-compact
  .section .title
    margin-bottom: 40px
    font-size: 2em

  .article
    margin-top: 10px
    margin-bottom: @margin-top
    max-width: 920px

  .article-head
    width: 20%
    float: left
    padding-right: 20px
    margin-top: 0
    padding-top: 15px
    font-size: 1em
    text-align: right
    line-height: 1.3

  .article-head:before
    display: none

  .article-code,
  .article-text
    width: 80%
    float: right

  .article-code
    font-size: 0.90em

  .article-code td
    padding: 15px 20px

  .article-text
    margin-top: 0
    margin-bottom: 0
    padding: 0
    font-size: 0.8em

  .article-text td
    padding: 10px 0

  .article-text p
    padding-bottom: 0
