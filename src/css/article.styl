/*
 * each thing
 */

.article
  &
    margin: 60px auto 40px auto

  td
    width: 350px

  .article-head
    margin: 0 0 20px 0
    padding: 0
    color: $accent
    font-size: 1.25em
    font-weight: 400
    border-radius: 4px

    &:before
      ion-icon('chevron-down')
      font-size: 12px
      display: inline-block
      margin-right: 15px
      color: $accent

      width: 24px
      height: @width
      line-height: @width + 1px
      text-align: center
      border: solid 2px $accent
      border-radius: 50%

  // code
  .code
    background: white
    padding: 30px
    padding-right: 50px
    border-right: solid 1px $line
    border-bottom: solid 1px $line
    height: 100%

  td:first-child .code
    border-top-left-radius: 4px
    border-bottom-left-radius: 4px

  td:last-child .code
    border-top-right-radius: 4px
    border-bottom-right-radius: 4px

  // text
  .text
    color: $slate
    font-size: 0.9em

  .text a
    color: $xblack
    text-decoration: none

