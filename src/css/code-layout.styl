.code-layout
  .toc-panel
    opacity: 0
    pointer-events: none
    transition: opacity 300ms linear

  @media (min-width: 960px)
    &
      margin-right: 200px

    .toc-panel
      opacity: 1
      pointer-events: auto
      display: block
      position: fixed
      width: 200px
      right: 0
      top: 0
      height: 100%

.toc-panel
  &
    padding: 24px
    text-align: right
    font-size: 0.9em

  .toc-section
    margin: 3px 0

  .item
    display: block
    font-size: 1em
    font-weight: normal
    margin: 0
    color: $slate
    text-decoration: none
    opacity: 0.5
    transition: opacity 100ms linear, color 100ms linear

  .item:hover
    opacity: 1
    color: $xblack
